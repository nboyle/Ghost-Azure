{{!< default}}

{{! The main content area on the homepage }}
<div class="clearfix main-outer main-with-sidebar" id="homepage" data-sticky_parent>
	<main class="left main-inner" data-sticky_column role="main" itemscope itemtype="http://schema.org/Blog">
		{{#author}}
		<nav class="clearfix wrapper-big gradient breadcrumbs" itemscope itemtype="http://schema.org/SiteNavigationElement" role="navigation">
			<div class="left">
				<a href="{{@blog.url}}" title="blog homepage">{{{@blog.title}}}</a>
				<span>&rsaquo;</span>
				<span>{{name}}</span>
			</div>
			<div class="right category-drop">
				<span class="trigger browse-tag" onclick="openTag()">Browse tag</span>
			</div>
		</nav>

		<aside class="clearfix gradient insight-panel" id="author-insight-panel" itemscope itemtype="http://schema.org/Person">
			<div class="insight-panel-container">
				<figure class="insight-panel-avatar" style="background-image: url({{image}})" itemprop="image" content="{{image}}"></figure>
				<ul class="insight-panel-data">
					<li class="insight-panel-data-name" itemprop="name">{{name}}</li>
					<li class="insight-panel-data-posts label">
						<div class="left content-published">{{plural ../pagination.total empty='No article' singular='% article' plural='% articles'}}</div>
						<div class="left social-links">
							<a class="icon-twitter" href="/">Twitter</a>
							<a class="icon-facebook" href="/">Facebook</a>
						</div>
					</li>
				</ul>
			</div>
		</aside>
		{{/author}}

		{{> loop}}
	</main>

	<aside class="right sidebar-outer" id="stick" data-sticky_column>
		{{> sidebar}}
	</aside>
</div>